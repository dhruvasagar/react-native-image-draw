{
  "name": "react-native-image-draw",
  "version": "0.2.1",
  "description": "Cross-platform React Native drawing over image component",
  "main": "lib/commonjs/index.js",
  "types": "lib/typescript/index.d.ts",
  "private": false,
  "files": [
    "src",
    "lib",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__"
  ],
  "scripts": {
    "lint": "eslint . --fix --ext .ts,.tsx",
    "prettier": "prettier --write \"**/*.+(ts|tsx|scss|json)\"",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepare": "bob build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dhruvasagar/react-native-image-draw.git"
  },
  "author": "Dhruva Sagar <dhruva@protonmail.com> (https://github.com/dhruvasagar)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dhruvasagar/react-native-image-draw/issues"
  },
  "homepage": "https://github.com/dhruvasagar/react-native-image-draw#readme",
  "keywords": [
    "react-native-component",
    "react-component",
    "react-native",
    "react",
    "ios",
    "android",
    "draw",
    "image",
    "svg"
  ],
  "dependencies": {
    "@luncheon/simplify-svg-path": "^0.1.4"
  },
  "devDependencies": {
    "@types/react": "^17.0.1",
    "@types/react-native": "0.64.3",
    "@typescript-eslint/eslint-plugin": "^5.7.0",
    "@typescript-eslint/parser": "^5.7.0",
    "eslint": "^8.9.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "eslint-plugin-react-native": "^4.0.0",
    "prettier": "^2.5.1",
    "react-native-builder-bob": "^0.18.2",
    "react-native-gesture-handler": ">=1.10.0",
    "typescript": "^4.5.5"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*",
    "react-native-gesture-handler": ">=1.10.0",
    "react-native-svg": ">=12.0.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "npx prettier --write",
      "eslint --fix"
    ]
  },
  "react-native": "src/index.tsx",
  "module": "lib/module/index.js",
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      "typescript"
    ]
  },
  "eslintIgnore": [
    "node_modules/",
    "lib/"
  ]
}
